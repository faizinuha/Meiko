{
  "compilerOptions": {
    // Konfigurasi kompiler TypeScript
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "dist", // Direktori keluaran
    "rootDir": "src", // Direktori sumber
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  // Pengecualian direktori
  "exclude": ["node_modules", ".vscode-test", "kawaiiInstall", "webviews"],
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/extension.js"]
}
